<div class="container">
	<h1><%= @catagory.titleize %> Questions</h1>
	<div>
		<%= button_to "Ask Question", questions_new_path(@catagory), :class => "button ask-questions-position", method: "get"%>
		<%= button_to "Back", root_path, :class => "button back-button-position", method: "get" %>
	</div>
	<div class="form-padding">
		<% @questions.each do |question| %>
		<div>
			<% if question.category == @catagory %>
			<h4 class="questions-style"><%= question.title %></h4>
			<div class="description-style"><%= question.description %></div>
			<div class="questions-devider"></div>
			<% end %>
		</div>
		<% end %>
	</div>
</div>
